<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dark_back_style">
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="tropic_back_style">
        <item name="android:background">@color/background_tropic</item>
    </style>

    <style name="light_text_style">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="dark_text_style">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="tropic_text_style">
        <item name="android:textColor">@color/text_tropic</item>
    </style>

    <style name="dark_chips_style">
        <item name="chipBackgroundColor">@color/color_gray</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="tropic_chips_style">
        <item name="chipStrokeColor">@color/background_dark</item>
        <item name="rippleColor">@color/chips_tropic_text</item>
        <item name="chipBackgroundColor">@color/chips_tropic_background</item>
        <item name="colorOnSurface">@color/chips_tropic_surface</item>
        <item name="android:textColor">@color/chips_tropic_text</item>
    </style>

    <style name="light_fab_style">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/light_fab_tint</item>
    </style>

    <style name="dark_fab_style">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="tint">@color/purple_200</item>
    </style>

    <style name="tropic_fab_style">
        <item name="backgroundTint">@color/tropic_fab_background</item>
        <item name="tint">@color/tropic_fab_tint</item>
    </style>

</resources>